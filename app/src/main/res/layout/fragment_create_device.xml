<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true"
    android:paddingBottom="120dp"
    android:clipToPadding="false"
    tools:context=".CreateDeviceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Device"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_light"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="10dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Device Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device Name"
                    android:textStyle="bold"
                    android:textColor="@color/text_light"
                    android:layout_marginBottom="5dp"/>

                <EditText
                    android:id="@+id/device_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/input_field_bg"
                    android:hint="e.g., Ceiling Fan"
                    android:inputType="text"
                    android:padding="14dp"
                    android:layout_marginBottom="12dp"
                    android:textColor="?attr/colorOnBackground"/>

                <!-- Location -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sub Title / Location"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text_light"
                    android:layout_marginBottom="5dp"/>

                <EditText
                    android:id="@+id/subtitle_input"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/input_field_bg"
                    android:hint="e.g., Living room"
                    android:inputType="text"
                    android:padding="14dp"
                    android:layout_marginBottom="12dp"
                    android:textColor="?attr/colorOnBackground"/>


                <!-- Device Key -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Device Key"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text_light"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/device_key_input"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/input_field_bg"
                    android:hint="e.g., bulb-1, fan-1"
                    android:inputType="text"
                    android:padding="14dp"
                    android:layout_marginBottom="12dp"
                    android:textColor="?attr/colorOnBackground"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Type"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text_light"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/select_type_btn"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:gravity="center_vertical"
                    android:padding="14dp"
                    android:background="@drawable/input_field_bg"
                    android:text="Choose type"
                    android:textColor="?attr/colorOnBackground"
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:drawablePadding="10dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/point_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Point Time"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text_light"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/point_time_input"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/input_field_bg"
                    android:hint="Select Date - Time"
                    android:focusable="false"
                    android:clickable="true"
                    android:padding="14dp"
                    android:layout_marginBottom="12dp"
                    android:textColor="?attr/colorOnBackground"/>

                <TextView
                    android:id="@+id/minute_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time in Minutes"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text_light"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/minute_time_input"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/input_field_bg"
                    android:hint="e.g. 10, 15, 30"
                    android:inputType="number"
                    android:padding="14dp"
                    android:layout_marginBottom="12dp"
                    android:textColor="?attr/colorOnBackground"/>

                <!-- Choose Type -->
