            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/text_white"
            app:backgroundTint="@color/theme_color"
            app:cornerRadius="16dp"
            android:layout_marginTop="16dp"
            app:elevation="4dp"/>

